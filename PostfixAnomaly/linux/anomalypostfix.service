[Unit]
Description=Postfix Anomaly Detection Service
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/home/primum/PostfixAnomaly
ExecStart=/bin/bash -c 'source /home/primum/.bashrc && conda activate py31010 && python /home/primum/PostfixAnomaly/src/kafka_anomaly_detector.py'
Restart=on-failure
RestartSec=5
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=anomalypostfix

[Install]
WantedBy=multi-user.target
